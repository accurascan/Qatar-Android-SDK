<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ocr_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </RelativeLayout>

    <include layout="@layout/custom_frame_layout" />

    <com.accurascan.accura.qatar.demo.customview.CustomTextView
        android:id="@+id/select_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/fifteen"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_border_rect"
        android:gravity="center"
        android:text="SELECT BARCODE TYPE"
        android:textColor="@color/white"
        android:textSize="@dimen/fifteen"
        app:typeface="ALLER_STD"
        android:visibility="gone"/>

</RelativeLayout>